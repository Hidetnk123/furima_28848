<%= render "shared/header" %>
<div class='item-contents'>
  <h2 class='title'><%= @nickname %>さんの投稿一覧</h2>
  <%= link_to 'アカウント編集ページ', "#", class:"subtitle" %>
      <ul class='item-lists'>
        <% @items.each do |item| %>
          <li class='list'>
            <div class='item-img-content'>
              <%= image_tag item.image, class:"item-img" %>
            </div>
            <div class='item-info'>
              <h3 class='item-name'>
                <%= item.name %>
              </h3>
              <div class='star-btn'>
                <%= image_tag "star.png", class:"star-icon" %>
                <span class='star-count'>0</span>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
</div>

<%= render "shared/footer" %>